            icon_left: "lock"
            icon_right: "eye-off"
            font_size: 18
            width: 200
            size_hint_x: None
            pos_hint:{"center_x": 0.5}
            password: True

        MDRoundFlatIconButton:
            text: "Log in"
            theme_text_color: "Custom"
            text_color: 0,0,0
            line_color: 0,0,0
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press:app.log_in(passw.text,user.text)

        MDRoundFlatIconButton:
            text: "Sign Up"
            theme_text_color: "Custom"
            text_color: 0,0,0
            line_color: 0,0,0
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press:app.root.current ="FirstWindow"



<AppWindow>:
    name: "AppWindow"
    MDCard:
        size_hint: None, None
        size: "400", "500"
        pos_hint: {"center_x": .5, "center_y": .5}
